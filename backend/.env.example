# Environment Configuration Files:
# - .env.development (for development)
# - .env.test (for testing) 
# - .env (fallback/production)
# The appropriate file is loaded automatically based on context

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/chanze

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production-must-be-at-least-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@chanze.app

# Application Configuration
APP_NAME=Chanze Task Management API
FRONTEND_URL=http://localhost:3000
DEBUG=true

# Security Configuration
BCRYPT_ROUNDS=12
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1